---
import { Picture } from '@astrojs/image/components'

export interface Props {
	number: string
	title: string
	content: string
	image: ImageMetadata
	class: string
}

const { number, title, content, image, class: className } = Astro.props
---

<div class:list={['flex gap-5', className]}>
	<div class="w-[28%] flex-none">
		<Picture
			class="object-cover h-full"
			src={image}
			sizes="(max-width: 640px) 30vw, 400px"
			alt={title}
			widths={[200, 400]}
			width={200}
			height={254}
			aspectRatio="200:254"
		/>
	</div>
	<div class="flex flex-col justify-between">
		<div class="text-3xl font-semibold text-grayish-blue">{number}</div>
		<a class="cursor-pointer text-xl font-bold hover:text-soft-orange"
			>{title}</a
		>
		<p>{content}</p>
	</div>
</div>
