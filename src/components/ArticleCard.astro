---
export interface Props {
	number: string
	title: string
	content: string
	imagePath: string
}

const { number, title, content, imagePath } = Astro.props
---

<div class="flex gap-5">
	<img class="w-[28%] object-cover" src={imagePath} alt={title} />
	<div class="flex flex-col justify-between">
		<div class="text-3xl font-semibold text-grayish-blue">{number}</div>
		<a class="cursor-pointer text-xl font-bold hover:text-soft-orange"
			>{title}</a
		>
		<p>{content}</p>
	</div>
</div>
